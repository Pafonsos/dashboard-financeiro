# Ambiente
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=sua_senha_aqui
DB_NAME=financial_dashboard

# JWT Secrets (ALTERE EM PRODUÇÃO!)
JWT_SECRET=seu-jwt-secret-super-seguro-aqui
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=seu-refresh-secret-super-seguro-aqui
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=12

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
SESSION_TIMEOUT=1800000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=true

# CORS
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Email (para reset de senha)
EMAIL_SERVICE=gmail
EMAIL_USER=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-app-gmail
EMAIL_FROM=noreply@suaempresa.com

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,csv
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5

# API
API_VERSION=v1
API_BASE_URL=/api
API_TIMEOUT=30000

# Cache
CACHE_TTL=300
CACHE_MAX=1000

# Business Rules
DEFAULT_CURRENCY=BRL
TAX_RATE=0.1
FISCAL_YEAR_START=01-01
REPORT_RETENTION_DAYS=365
